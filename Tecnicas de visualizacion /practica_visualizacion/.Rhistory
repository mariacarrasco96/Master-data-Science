ggplot(economics, aes(x = date, y = unemploy)) +
geom_line()
#2)
ggplot(economics_long, aes(x = date)) +
geom_line( aes( y = value01, color = variable))
#2)Gráfica con lineas de colores
ggplot(economics_long, aes(x = date)) +
geom_line( aes( y = value, color = variable))
#2)Gráfica con lineas de colores
ggplot(economics_long, aes(x = date)) +
