#3)Scatterplot
ggplot(faithful, aes(x = eruptions, y = waiting)) +
geom_point()
#4)
ggplot(faithful, aes(x = eruptions, y = waiting, alpha = 0.5)) +
geom_point()
#3)Scatterplot
ggplot(faithful, aes(x = eruptions, y = waiting)) +
geom_point()
#5)Evita overplotting usando jittering
ggplot(faithful, aes(x = eruptions, y = waiting)) +
geom_point(position = "jitter") +
geom_jitter()
#6)Solapa jitting y la estimacion de densidad
ggplot(faithful, aes(x = eruptions, y = waiting)) +
geom_point(position = "jitter") +
geom_jitter() +
geom_density2d()
